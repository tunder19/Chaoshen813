<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <com.example.administrator.chaoshen.widget.NoScrollViewPager
        android:id="@+id/activity_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/falgre" />

    <View
        android:id="@+id/falgre"
        style="@style/color_line_hor"
        android:layout_above="@+id/falgre2" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/falgre2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:visibility="gone"
            android:id="@+id/bottom_bar_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/icon_1_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_1"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="match_parent"
                    android:src="@drawable/service_select" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/icon_2_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_2"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="match_parent"
                    android:src="@drawable/new_unselect" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/icon_3_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/icon_3"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="match_parent"
                    android:src="@drawable/price_unselect" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/icon_4_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_4"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="match_parent"
                    android:src="@drawable/mine_unselect" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>