<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="请选择"
        android:textColor="@color/text_colorin9"
        android:textSize="@dimen/sp_12" />

    <ListView

        android:minHeight="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/pay_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/XFrame_white"
        android:orientation="vertical" />

    <Button
        android:id="@+id/pay_bt"
        android:layout_width="@dimen/dp_289"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_46"
        android:background="@drawable/selector_login_bt"
        android:enabled="false"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/XFrame_white"
        android:textSize="@dimen/sp_16" />

</LinearLayout>