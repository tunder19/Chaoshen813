<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#99000000"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/get_price_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/get_price_icon" />

    <TextView
        android:id="@+id/get_price_title"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="恭喜您的竞彩足球混合过关方案"
        android:textColor="@color/white_color"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/get_price_money"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="中奖XX元"
        android:textColor="#FFD933"
        android:textSize="@dimen/sp_22"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_marginTop="@dimen/dp_56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/get_price_close"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="@dimen/dp_115"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/get_price_close" />

        <Button
            android:id="@+id/get_price_share"
            android:layout_width="@dimen/dp_115"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/get_price_share" />

    </LinearLayout>

</LinearLayout>