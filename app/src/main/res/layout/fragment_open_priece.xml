<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <com.example.administrator.chaoshen.util.MarqueeTextView
        android:id="@+id/marqueeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color" />

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/refresh_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/marqueeTv"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/item_father"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"/>
        </LinearLayout>




    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>




    <TextView


        android:id="@+id/no_net_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="@dimen/dp_14"
        android:drawableTop="@drawable/no_netword"
        android:gravity="center_horizontal"
        android:text="无网络"
        android:textColor="@color/text_colorin9"
        android:textSize="@dimen/sp_12"
        android:visibility="gone" />

</RelativeLayout>