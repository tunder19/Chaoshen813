<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_bar_bg3"
        android:orientation="vertical">

        <LinearLayout

            android:id="@+id/title_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <LinearLayout
                android:layout_width="@dimen/dp_128"
                android:layout_height="@dimen/dp_27"
                android:layout_centerInParent="true"
                android:background="@drawable/kaijiang_title_shape"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/click_kaijiang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/kaijaing_icon"
                    android:gravity="center"
                    android:text="开奖"
                    android:textColor="@color/button_red"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:id="@+id/click_score"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="比分"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/dp_14" />


            </LinearLayout>

            <RelativeLayout
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="visible"
                android:id="@+id/kaijiang_notice"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_toLeftOf="@+id/price_notice"
                    android:background="@drawable/ring_cion" />

                <TextView
                    android:id="@+id/price_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/sp_12" />





            </RelativeLayout>
            <ImageView
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:src="@drawable/score_right_icon"
                android:id="@+id/price_im"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:textColor="@color/white_color"
                android:textSize="@dimen/sp_12" />


        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>


</LinearLayout>