<?xml version="1.0" encoding="utf-8"?>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout

            android:id="@+id/bg_mine_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_136"
            android:background="@drawable/lottery_bg2_meitu_1">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:layout_marginBottom="@dimen/dp_34"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:id="@+id/head_icon"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_20">

                    <com.makeramen.roundedimageview.RoundedImageView

                        android:id="@+id/tabs_user_roundimage"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_70"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_my_sport_profile"
                        app:riv_border_color="@color/white_color"
                        app:riv_border_width="@dimen/dp_0"
                        app:riv_corner_radius="@dimen/dp_70" />

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/tabs_user_loginway"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/weixin_icon" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/to_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_34"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/head_icon"
                    android:padding="@dimen/dp_20"
                    android:text="登录/注册"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/has_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_34"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_toRightOf="@+id/head_icon"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="用户名"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="用户id"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/user_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="用户余额"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/setting_icon"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/mine_setting" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57"
            android:background="@color/white_color"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/recharge_monoey"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/recharge_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center"
                    android:text="充值"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dp_4"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/cash_monoey"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cash_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/buy_record"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_5"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/touzhu_record"
                    android:drawablePadding="@dimen/dp_12"
                    android:gravity="center"
                    android:text="订单记录"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:background="@drawable/right_arrow"
                    android:gravity="center" />

            </RelativeLayout>

            <View
                android:layout_marginRight="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_46"
                android:background="@color/line_color2" />

            <RelativeLayout
                android:id="@+id/bussiness_deatil"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/business_icon1"
                    android:drawablePadding="@dimen/dp_12"
                    android:gravity="center"
                    android:text="交易记录"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:background="@drawable/right_arrow"
                    android:gravity="center" />

            </RelativeLayout>

            <View
                android:layout_marginRight="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_46"
                android:background="@color/line_color2" />

            <RelativeLayout
                android:id="@+id/message_deatil"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/message_icon"
                    android:drawablePadding="@dimen/dp_12"
                    android:gravity="center"
                    android:text="通知消息"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/count_message"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_30"
                    android:background="@drawable/shape_circle_red"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white_color" />

                <Button
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:background="@drawable/right_arrow"
                    android:gravity="center" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/luckymongey_deatil"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_5"
               >

                <TextView
                    android:id="@+id/hongbao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/business_icon"
                    android:drawablePadding="@dimen/dp_12"
                    android:gravity="center"
                    android:text="我的红包"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/hongbao"
                    android:background="@drawable/shape_circle_red"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8" />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow_fal"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#F36910"
                    android:text="128元新人红包等你拿"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/arrow_fal"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:background="@drawable/right_arrow"
                    android:gravity="center" />

            </RelativeLayout>

            <View
                android:layout_marginRight="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_46"
                android:background="@color/line_color2" />

            <RelativeLayout
                android:id="@+id/user_deatil"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/person_deatil"
                    android:drawablePadding="@dimen/dp_12"
                    android:gravity="center"
                    android:text="个人资料"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/show_has_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_30"
                    android:gravity="center"
                    android:text="未实名认证"
                    android:textColor="#F47C37"
                    android:textSize="@dimen/dp_12" />

                <Button
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:background="@drawable/right_arrow"
                    android:gravity="center" />

            </RelativeLayout>

            <View
                android:layout_marginRight="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_46"
                android:background="@color/line_color2" />

            <RelativeLayout
                android:id="@+id/introduce_friends"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/friends_introduce"
                    android:drawablePadding="@dimen/dp_12"
                    android:gravity="center"
                    android:text="推荐好友"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:background="@drawable/right_arrow"
                    android:gravity="center" />

            </RelativeLayout>

            <View
                android:layout_marginRight="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_46"
                android:background="@color/line_color2" />

            <RelativeLayout
                android:id="@+id/help_center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/help_center"
                    android:drawablePadding="@dimen/dp_12"
                    android:gravity="center"
                    android:text="帮助中心"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:background="@drawable/right_arrow"
                    android:gravity="center" />

            </RelativeLayout>

            <View
                android:layout_marginRight="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_46"
                android:background="@color/line_color2" />

            <RelativeLayout

                android:id="@+id/kefu_center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/kefu_icon"
                    android:drawablePadding="@dimen/dp_12"
                    android:gravity="center"
                    android:text="意见反馈"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:background="@drawable/right_arrow"
                    android:gravity="center" />

            </RelativeLayout>

            <RelativeLayout
                android:background="@color/bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"/>


        </LinearLayout>


    </LinearLayout>

</com.handmark.pulltorefresh.library.PullToRefreshScrollView>