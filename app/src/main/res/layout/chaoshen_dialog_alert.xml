<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_265"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!-- Title -->


    <LinearLayout
        android:id="@+id/father"
        android:gravity="center"
        android:layout_width="@dimen/dp_263"
        android:layout_height="@dimen/dp_155"
        android:background="@drawable/white_shape_bg"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="温馨提示"
            android:textColor="@color/text_colorin3"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_1"
            style="@style/color_line_hor"
            android:id="@+id/dialog_line"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_14"
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="提示"
            android:textColor="@color/text_colorin6"
            android:textSize="@dimen/sp_14" />




        <Button
            android:enabled="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:id="@+id/one_button"
            android:layout_width="@dimen/dp_115"
            android:layout_height="@dimen/dp_34"
            android:background="@drawable/button_srlector"
            android:focusable="true"
            android:gravity="center"
            android:padding="2dp"
            android:text="确定"
            android:textColor="@color/white_color"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_14"
            android:visibility="visible"
            android:id="@+id/two_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginRight="@dimen/dp_6"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_115"
                android:layout_height="@dimen/dp_35"
                android:id="@+id/btn_sure"
                android:background="#C7C7C7"
                android:focusable="true"
                android:gravity="center"
                android:onClick="onClickSure"
                android:text="确定"
                android:textColor="@color/white_color"
                android:textSize="@dimen/sp_14" />



            <Button
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_gravity="center"
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/dp_115"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/button_srlector"
                android:focusable="true"
                android:gravity="center"
                android:onClick="onClickCancel"
                android:text="取消"
                android:textColor="@color/white_color"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_alignRight="@+id/father"
        android:id="@+id/cancel_X"
        android:textColor="@color/white_color"
        android:background="@drawable/cricle_gray"
        android:gravity="center"
        android:text="X"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24" />

</RelativeLayout>