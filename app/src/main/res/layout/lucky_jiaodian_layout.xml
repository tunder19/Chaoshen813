<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/XFrame_white"
    android:orientation="vertical">


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lucky_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#F1F1F1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/lucky_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:text="【大乐透】"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/daletou1"
                style="@style/cricle_textView_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01" />

            <TextView
                android:id="@+id/daletou2"
                style="@style/cricle_textView_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/daletou1"
                android:text="01" />

            <TextView
                android:id="@+id/daletou3"
                style="@style/cricle_textView_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/daletou2"
                android:text="01" />

            <TextView
                android:id="@+id/daletou4"
                style="@style/cricle_textView_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/daletou3"
                android:text="01" />

            <TextView
                android:id="@+id/daletou5"
                style="@style/cricle_textView_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/daletou4"
                android:text="01" />

            <TextView
                android:id="@+id/daletou_blue1"
                style="@style/cricle_textView_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_toRightOf="@+id/daletou5"
                android:text="01" />

            <TextView
                android:id="@+id/daletou_blue2"
                style="@style/cricle_textView_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/daletou_blue1"
                android:text="01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:drawableLeft="@drawable/horn_icon"
                android:text="换一注"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_11">

            <LinearLayout
                android:id="@+id/flag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奖池:"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX元"
                    android:textColor="#C8152D"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flag1"
                android:layout_marginTop="@dimen/dp_12"
                android:text="2018050期 后天(周六）19:35截止"
                android:textColor="#999999"
                android:textSize="@dimen/sp_10" />

            <Button
                android:layout_width="@dimen/dp_103"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:text="立即投注"
                android:textColor="@color/XFrame_white"
                android:textSize="@dimen/sp_15" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#F1F1F1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

            <ImageView
                android:id="@+id/reace_improtant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/reace_improtant" />

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/reace_improtant"
                android:src="@drawable/fire_race" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_11"
                android:text="更多 >" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:elevation="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/cut_er" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周六001 英足总杯"
                        android:textColor="#666"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05-20 00:50"
                        android:textColor="#666"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/cut_er" />

            </LinearLayout>



        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="@dimen/dp_11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/buy_box_item"
                layout="@layout/buy_box"/>
            <TextView
                android:gravity="center"
                android:background="@color/XFrame_darker_gray"
                android:layout_toLeftOf="@+id/buy_box_item"
                android:textSize="@dimen/sp_10"
                android:ems="1"
                android:text="让球"
                android:layout_marginRight="@dimen/dp_7"
                android:id="@+id/notice_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25" />
            <TextView
                android:ems="1"
                android:layout_below="@+id/notice_text"
                android:gravity="center"
                android:background="@color/XFrame_darker_gray"
                android:layout_toLeftOf="@+id/buy_box_item"
                android:textSize="@dimen/sp_10"
                android:text="-1"
                android:layout_marginRight="@dimen/dp_7"
                android:id="@+id/notice_text1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"/>
               <LinearLayout
                   android:layout_marginLeft="@dimen/dp_10"
                   android:orientation="vertical"
                   android:layout_toRightOf="@+id/spinner"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="#666666"
                       android:textSize="@dimen/sp_10"
                       android:text="奖金预计"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:textColor="#C8152D"
                       android:textSize="@dimen/sp_12"
                       android:text="X元"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

               </LinearLayout>

            <Button
                android:id="@+id/tou_zhu_bt"
                android:layout_width="@dimen/dp_103"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="立即投注"
                android:textColor="@color/XFrame_white"
                android:textSize="@dimen/sp_15" />



        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#F6F6F6" />

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/gonggao_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gonggao_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公告"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp_1"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/score_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/score" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="比分"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp_1"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/activity_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp_1"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/help_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮助"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp_1"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>


    </LinearLayout>
    <View
        style="@style/color_line_hor"/>

    <View
        android:background="#F1F1F1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_29" />


</LinearLayout>