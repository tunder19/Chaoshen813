<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50">
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/rubish_imageView_rl"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="@dimen/dp_5"
        android:id="@+id/rubish_imageView"
        android:layout_width="@dimen/dp_19"
        android:layout_height="@dimen/dp_19"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:src="@drawable/rubish_icon" />
        <View
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rubish_imageView"
            android:background="@color/line_color"
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_19"></View>
    </RelativeLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_toRightOf="@+id/rubish_imageView_rl"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/selcet_zhu_num"
            android:textSize="@dimen/sp_14"
            android:text="0注0元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/has_select"
            android:layout_marginTop="@dimen/dp_7"
            android:textColor="#999999"
            android:textSize="@dimen/sp_10"
            android:text="已选"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:id="@+id/sure_buy"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="#C8152D"
        android:layout_alignParentRight="true"
        android:textColor="@color/XFrame_white"
        android:textSize="@dimen/sp_15"
        android:text="确定"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_35" />

</RelativeLayout>