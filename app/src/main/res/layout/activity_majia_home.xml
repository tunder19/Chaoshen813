<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.example.administrator.chaoshen.widget.NoScrollViewPager
        android:id="@+id/activity_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@+id/falgre" />

    <View
        android:id="@+id/falgre"
        style="@style/color_line_hor"
        android:layout_above="@+id/bottom_bar"
        android:visibility="gone" />


    <LinearLayout
        android:layout_marginTop="-10dp"
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_m_home_bottom"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/icon_1_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_1"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_3"
                android:src="@drawable/ma_info_icon" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/icon_2_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_2"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_3"
                android:src="@drawable/ma_unscore_icon" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/vote_img"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_alignParentBottom="true"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_centerHorizontal="true"
               />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/icon_3_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/icon_3"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_3"
                android:src="@drawable/ma_nodata_icon" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/icon_4_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_4"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_3"
                android:src="@drawable/ma_unmine_icon" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>