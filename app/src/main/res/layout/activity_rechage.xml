<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:id="@+id/father1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_67"
            android:background="@color/XFrame_white"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView

                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="当前用户： "
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/user_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="当前余额： "
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="选择充值金额"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/XFrame_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_34"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/recharge_red"
                    android:gravity="center"
                    android:text="50"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/item_2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_34"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/recharge_gray"
                    android:gravity="center"
                    android:text="100"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/item_3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_34"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/recharge_gray"
                    android:gravity="center"
                    android:text="200"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_34"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/recharge_gray"
                    android:gravity="center"
                    android:text="300"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/item_5"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_34"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/recharge_gray"
                    android:gravity="center"
                    android:text="500"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView

                    android:maxLength="5"
                    android:id="@+id/item_6"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_34"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/recharge_gray"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="自定义金额"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="选择支付方式"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />


        <ListView
            android:background="@color/white_color"
            android:divider="@null"
            android:id="@+id/pay_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </ListView>
        <View

            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout
            android:id="@+id/server_layout_ll"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_50"
            android:orientation="horizontal">

            <CheckBox
                android:scaleY="0.7"
                android:scaleX="0.7"
                android:id="@+id/checkbox"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:checked="true"
                style="@style/CustomCheckboxTheme" />

            <TextView
                android:textColor="@color/text_colorin9"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已阅读并同意"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/server_layout"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《充值协议》"
                android:textColor="#2E7AE5"
                android:textSize="@dimen/sp_10" />


        </LinearLayout>


        <Button
            android:layout_marginBottom="@dimen/dp_30"
            android:id="@+id/pay_bt"
            android:enabled="false"
            android:layout_marginTop="@dimen/dp_46"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/XFrame_white"
            android:gravity="center"
            android:text="立即充值"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/selector_login_bt"
            android:layout_width="@dimen/dp_289"
            android:layout_height="@dimen/dp_45" />



    </LinearLayout>





</ScrollView>