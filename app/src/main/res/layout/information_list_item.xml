<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_103"
        android:background="@drawable/bg_white"
        >

        <ImageView

            android:id="@+id/information_iamge"
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_76"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@drawable/information_list" />

        <TextView
            android:layout_marginRight="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:id="@+id/information_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/information_iamge"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/information_iamge"
            android:text=""
            android:textColor="@color/text_colorin3"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/information_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/information_iamge"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:text="时间"
            android:textColor="@color/text_colorin9"
            android:textSize="@dimen/sp_10" />
    </RelativeLayout>


</RelativeLayout>