<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#99000000"
    android:layout_height="match_parent">

    <TextView

        android:visibility="gone"
        android:id="@+id/canlce_right"
        android:layout_marginRight="@dimen/dp_34"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/get_activity_im"
        android:textColor="@color/white_color"
        android:textSize="@dimen/sp_15"
        android:gravity="center"
        android:text="X"
        android:background="@drawable/close_cricle"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40" />

    <ImageView
        android:id="@+id/get_activity_im"
        android:layout_centerInParent="true"
        android:src="@drawable/activity_im"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_280" />

    <TextView
        android:visibility="gone"
        android:id="@+id/canlce_bottom"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/get_activity_im"
        android:textColor="@color/white_color"
        android:textSize="@dimen/sp_15"
        android:gravity="center"
        android:text="X"
        android:background="@drawable/close_cricle"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40" />

</RelativeLayout>