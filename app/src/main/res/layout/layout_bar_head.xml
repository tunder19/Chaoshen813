<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tabs_user_roundimage"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/points_team_icon"
        app:riv_border_color="@color/white_color"
        app:riv_border_width="@dimen/dp_0"
        app:riv_corner_radius="@dimen/dp_24" />
    <TextView

        android:layout_marginTop="@dimen/dp_3"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_colorin9"
        android:id="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>