<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/canlce_right"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:layout_above="@+id/lucky_tomorrow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_70"
        android:background="@drawable/delete_bt"
        android:gravity="center"
        android:textColor="@color/white_color"
        android:textSize="@dimen/sp_15"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/lucky_tomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/lucky_tomorrow"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:id="@+id/how_much_red"
            android:layout_width="@dimen/dp_125"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_60"
            android:text="您有x个红包今天就到期啦"
            android:textColor="#E54B44"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:visibility="gone"
            android:id="@+id/adsf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/how_much_red"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="赶快试试手气吧~"
            android:textColor="@color/text_colorin3"
            android:textSize="@dimen/sp_12" />




    </RelativeLayout>
    <TextView
        android:id="@+id/check_hongbao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lucky_tomorrow"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_34"
        android:background="@drawable/chekce_red_money"
        android:gravity="center"
        android:textColor="#C8152D"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>