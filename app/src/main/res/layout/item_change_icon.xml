<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#36000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/XFrame_white"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/text_colorin3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="订单"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/dismiss_money"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/cancel_bt"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="X" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color2" />

        <RelativeLayout
            android:id="@+id/head_flage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10">

            <TextView
                android:textColor="@color/text_colorin3"
                android:id="@+id/tvTakePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/XFrame_white"
                android:text="方案金额"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="X元"
                android:textColor="@color/button_red"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color2" />


        <RelativeLayout
            android:id="@+id/hongbao_money_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:textColor="@color/text_colorin3"
                android:id="@+id/tvSelectPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/XFrame_white"
                android:text="红包抵扣"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/hongbao_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/arrow_falge"
                    android:text="X元"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/arrow_falge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/arrow_down"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10">

            <TextView
                android:textColor="@color/text_colorin3"
                android:id="@+id/yu_e_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/XFrame_white"
                android:text="余额抵扣"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/yue_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="X元"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color2" />

        <RelativeLayout
            android:id="@+id/no_enough_money_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:visibility="gone">

            <TextView
                android:textColor="@color/text_colorin3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@color/XFrame_white"
                android:text="仍需支付"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15">

                <TextView
                    android:id="@+id/how_much_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X元"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line_color2" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/pay_way_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:visibility="gone"

            >

            <TextView
                android:textColor="@color/text_colorin3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@color/XFrame_white"
                android:text="支付方式"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10">

                <TextView
                    android:id="@+id/pay_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/arrow_falge2"
                    android:text="X支付"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/arrow_falge2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/arrow_down"
                    android:visibility="visible" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line_color2" />
        </RelativeLayout>


        <TextView
            android:id="@+id/pay_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/button_red"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/XFrame_white"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

</RelativeLayout>