<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white_color"
    android:descendantFocusability="blocksDescendants"
    android:layout_marginTop="@dimen/dp_30"
   >

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_30"
        android:clickable="false"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/tabs_user_roundimage"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:scaleType="centerCrop"
            android:src="@drawable/img_my_sport_profile"
            app:riv_border_color="@color/white_color"
            app:riv_border_width="@dimen/dp_0"
            app:riv_corner_radius="@dimen/dp_100" />

        <ImageView
            android:id="@+id/is_check"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/selector_icon"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>