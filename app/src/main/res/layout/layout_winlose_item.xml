<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout

        android:id="@+id/time_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/hot_image"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/hot_icon_image"
            android:visibility="gone" />


            <LinearLayout
                android:id="@+id/time_data1"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hot_image"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/league"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="1231"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/league_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="123"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/league_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="123"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_10" />


                <ImageView
                    android:id="@+id/league_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_up" />


            </LinearLayout>

        <LinearLayout
            android:id="@+id/odds_box"
            android:layout_width="@dimen/dp_250"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/time_data1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/host_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#C8152D"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="vs"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/guest_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#C8152D"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>

            <include
                android:id="@+id/flage_11"
                layout="@layout/layout_odds_box_item" />


        </LinearLayout>


    </RelativeLayout>

    <include
        android:id="@+id/compition_deatil"
        layout="@layout/layout_history_score"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/white_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15" />


</LinearLayout>