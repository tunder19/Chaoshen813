<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/bg_white"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_horizontal"
            android:text="开奖通知定制"
            android:textColor="@color/text_colorin3"
            android:textSize="@dimen/sp_16" />

        <View
            style="@style/color_line_hor"
            android:layout_marginTop="@dimen/dp_15" />


        <LinearLayout
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ssq_lal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
               >

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="双色球"
                    android:textColor="@color/text_colorin3"
                    android:textSize="@dimen/sp_15" />
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:text="（每周二/四/日）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/shuangse_qiu_bt"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:sb_show_indicator="false"
                    app:sb_checked="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/daletou_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
               >

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大乐透"
                    android:textColor="@color/text_colorin3"
                    android:textSize="@dimen/sp_15" />
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:text="（每周一/三/六）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/daletou_bt"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:sb_show_indicator="false"
                    app:sb_checked="true"/>


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>