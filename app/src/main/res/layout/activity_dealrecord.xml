<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">




    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:divider="@null"
        android:id="@+id/refreshLayout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buy_bottem"
        android:layout_marginBottom="@dimen/dp_5" />
    <TextView
        android:visibility="gone"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/no_net_word"
        android:text="无网络"
        android:drawableTop="@drawable/no_netword"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/no_data"
        android:text="暂无记录"
        android:drawableTop="@drawable/no_record"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/no_lucky_money"
        android:text="暂无红包"
        android:drawableTop="@drawable/no_lucky_money"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>