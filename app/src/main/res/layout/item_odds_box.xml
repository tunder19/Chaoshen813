<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E0E0E0" />

    <RelativeLayout
        android:id="@+id/win_odds_data_ll"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/race_name_id"
            android:textColor="@color/text_colorin3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="主胜"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_alignBottom="@+id/race_name_id"
            android:layout_toRightOf="@+id/race_name_id"
            android:textColor="@color/text_colorin9"
            android:id="@+id/win_odds_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12312"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E0E0E0" />


</LinearLayout>
