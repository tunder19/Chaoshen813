<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#99000000"
    android:layout_height="match_parent">

    <TextView
        android:visibility="visible"
        android:id="@+id/canlce_right"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/get_activity_im"
        android:textColor="@color/white_color"
        android:textSize="@dimen/sp_15"
        android:gravity="center"
        android:background="@drawable/delete_bt"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28" />

    <RelativeLayout
        android:id="@+id/get_activity_im"
        android:layout_centerInParent="true"
        android:background="@drawable/lucky_icon_im"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_299" >

        <TextView
            android:layout_marginTop="@dimen/dp_35"
            android:layout_centerHorizontal="true"
            android:id="@+id/conteng"
            android:textStyle="bold"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/white_color"
            android:text="您有x个红包到账啦"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/conteng"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white_color"
            android:text="马上来一注"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





    </RelativeLayout>
    <TextView
        android:textStyle="bold"
        android:layout_below="@+id/get_activity_im"
        android:layout_centerHorizontal="true"
        android:id="@+id/check_hongbao"
        android:gravity="center"
        android:background="@drawable/chekce_red_money"
        android:layout_marginTop="@dimen/dp_21"
        android:textSize="@dimen/sp_18"
        android:textColor="#C8152D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>